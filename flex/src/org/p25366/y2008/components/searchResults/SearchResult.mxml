	</mx:Script>
	<mx:HTTPService
		id="test_service"
		resultFormat="e4x"
		method ="GET"
		showBusyCursor="true" 
		result="resultHandler(event)" 
		fault="faultHandler(event)"  
		url= "{model.data+'?action=search&amp;q='+_word}"
		/>
	<mx:VBox>	
		<mx:Text 
			text="Résultat de la recherche pour {_word}" 
			width="400" 
			/>
		<mx:List 
			dataProvider="{listData}" 
			>
			<mx:itemRenderer>
				<mx:Component>
					<mx:VBox>
						<mx:Label text="{data.description}"/>
						<mx:Label text="{data.date}"/>
						<mx:Label text="{data.num}"/>
					</mx:VBox>
				</mx:Component>
			</mx:itemRenderer>
		</mx:List>
	</mx:VBox>
