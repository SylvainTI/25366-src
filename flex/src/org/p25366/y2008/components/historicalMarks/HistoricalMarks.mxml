<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	creationComplete="init()"
	>


	<mx:Script>
		<![CDATA[
			import org.p25366.y2008.model.Model;
			import org.p25366.y2008.components.historicalMarks.vo.HistoricalEventVO;
			import mx.rpc.http.HTTPService;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			 
			import org.p25366.y2008.components.historicalMarks.model.HistoricModel;
			import org.p25366.y2008.components.historicalMarks.vo.HistoricalMarkVO;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.utils.ObjectUtil;
			import org.p25366.y2008.components.historicalMarks.libs.HistoricTrack;		
			import org.p25366.y2008.components.historicalMarks.libs.HistoricSlider;
			
			[Bindable]
			private var historicModel:HistoricModel=HistoricModel.getInstance(); 
			
			[Bindable]
			private var association_id_date:Array;
			
			private var historicalMarkVO:HistoricalMarkVO;
			private var historicalEventVO:HistoricalEventVO;
			
			private function resultHandler(event:ResultEvent):void{
				//Alert.show(event.result.toString());
			//	Alert.show(ObjectUtil.toString(event.result));
				//Alert.show(event.result.toString());
				association_id_date = new Array();
				
				historicModel.marks= new ArrayCollection();
				historicalEventVO = new HistoricalEventVO();
				
				for each(var repere:XML in (event.result as XML).elements()){
				
				association_id_date[association_id_date.length] = repere.date;
				historicalMarkVO = new HistoricalMarkVO();
				historicalMarkVO.id = repere.id;
				historicalMarkVO.date = repere.date;
				historicalMarkVO.events = new ArrayCollection();
				
					for each (var one_event:XML in repere.events.elements()){
					historicalEventVO = new HistoricalEventVO();
				//	Alert.show(repere.events.toString());
				//Alert.show(one_event.description);
					historicalEventVO.description = one_event.description;
					historicalEventVO.type = one_event.@type;
					historicalEventVO.link = one_event.link;
					historicalEventVO.from_date =  one_event.dates.from_date;
					historicalEventVO.to_date =  one_event.dates.to_date;
					historicalEventVO.date_type = one_event.date.@type;
					historicalMarkVO.events.addItem(historicalEventVO);
					}
					historicModel.marks.addItem(historicalMarkVO);
					
			}
			historic_slider.maximum = association_id_date.length - 1;
		
			}
			private function faultHandler(event:FaultEvent):void{
				Alert.show(event.fault.toString());
			}
			
			
			public var service:HTTPService;
			private function init():void{
				service= new HTTPService();
				service.resultFormat = HTTPService.RESULT_FORMAT_E4X;
				service.method ="GET";
				service.addEventListener(ResultEvent.RESULT, resultHandler);
				service.addEventListener(FaultEvent.FAULT, faultHandler);
				service.url = Model.getInstance().data+"?action=historic_keys";
				service.send();
			}
			
			private function tipValue(value:Number):String{
			return (association_id_date[value]);	
			}
			
			private function sliderChange(evt:Event):void{
			var index:Number = historic_slider.value;
			list.scrollToIndex(index);
			}

		]]>
	</mx:Script>
<mx:VBox  >
<mx:HBox>
<mx:Label text="100 repères historiques"  fontSize="20" />	
<mx:Label  text="tous" textDecoration="underline"  fontSize="14" buttonMode="true" click="historic_slider.minimum=0;historic_slider.maximum=100;"/>
<mx:Label  text="de 0 à 20" textDecoration="underline"  fontSize="14" buttonMode="true" click="historic_slider.minimum=0;historic_slider.maximum=19;"/>
<mx:Label  text="de 20 à 40" textDecoration="underline"  fontSize="14" buttonMode="true" click="historic_slider.minimum=20;historic_slider.maximum=39;"/>
<mx:Label  text="de 40 à 60" textDecoration="underline"  fontSize="14" buttonMode="true" click="historic_slider.minimum=40;historic_slider.maximum=59;"/>
<mx:Label  text="de 60 à 80" textDecoration="underline"  fontSize="14" buttonMode="true" click="historic_slider.minimum=60;historic_slider.maximum=79;"/>
<mx:Label  text="de 80 à 100" textDecoration="underline" fontSize="14" buttonMode="true" click="historic_slider.minimum=80;historic_slider.maximum=99;"/>

</mx:HBox>
	<mx:VBox horizontalAlign="left">
	<mx:Canvas>
		<mx:Button paddingBottom="0" paddingLeft="2"  paddingRight="2"  paddingTop="0" left="{historic_slider.width*0}" label="-1 000 000" borderColor="0xababab" fillColors="[0xababab, 0xababab]" color="0xfbfbfb" fontSize="11"  cornerRadius="11" click="list.scrollToIndex(1)"/>
		<mx:Button left="{historic_slider.width*0.07}" label="-2 000" borderColor="0xababab" fillColors="[0xababab, 0xababab]" color="0xfbfbfb" fontSize="11" letterSpacing="0.2"  cornerRadius="11" click="list.scrollToIndex(5)"/>
		<mx:Button left="{historic_slider.width*0.2}" label="0" borderColor="0xababab" fillColors="[0xababab, 0xababab]" color="0xfbfbfb" fontSize="11" letterSpacing="0.2"  cornerRadius="11" click="list.scrollToIndex(16)"/>
		<mx:Button left="{historic_slider.width*0.3}" label="1 000" borderColor="0xababab" fillColors="[0xababab, 0xababab]" color="0xfbfbfb" fontSize="11" letterSpacing="0.2"  cornerRadius="11" click="list.scrollToIndex(36)"/>
		<mx:Button left="{historic_slider.width*0.5}" label="1 200" borderColor="0xababab" fillColors="[0xababab, 0xababab]" color="0xfbfbfb" fontSize="11" letterSpacing="0.2"  cornerRadius="11" click="list.scrollToIndex(44)"/>
		<mx:Button left="{historic_slider.width*0.65}" label="1 500" borderColor="0xababab" fillColors="[0xababab, 0xababab]" color="0xfbfbfb" fontSize="11" letterSpacing="0.2"  cornerRadius="11" click="list.scrollToIndex(56)"/>
		<mx:Button left="{historic_slider.width*0.95}" label="2010" borderColor="0xababab" fillColors="[0xababab, 0xababab]" color="0xfbfbfb" fontSize="11" letterSpacing="0.2"  cornerRadius="11" click="list.scrollToIndex(100)"/>
	</mx:Canvas>
	<mx:HSlider trackSkin="{HistoricTrack}" sliderThumbClass="{HistoricSlider}"  
		useHandCursor="true" buttonMode="true" liveDragging="true" invertThumbDirection="true"  
		change="sliderChange(event)" dataTipFormatFunction="tipValue" 
		width="100%" id="historic_slider"  snapInterval="1" minimum="0"  
		dataTipOffset="-50"  bottom="-50"/>
		
		<mx:HorizontalList paddingTop="20"
			horizontalScrollPolicy="off"
			borderThickness="0"
			backgroundAlpha="0"
			id="list"
			dataProvider="{historicModel.marks}" 
			columnWidth="300"
			itemRenderer="org.p25366.y2008.components.historicalMarks.view.KeyItemRenderer"
			styleName="listAccueil"
			/>
	</mx:VBox>
</mx:VBox>

</mx:Canvas>